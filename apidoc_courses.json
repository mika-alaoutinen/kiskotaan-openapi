          },
          "par" : {
            "type" : "number"
          }
        },
        "required" : [ "holes", "id", "name", "par" ]
      },
      "NewHole" : {
        "description" : "A new course hole without ID.",
        "properties" : {
          "number" : {
            "maximum" : 30,
            "minimum" : 1,
            "type" : "integer"
          },
          "par" : {
            "maximum" : 6,
            "minimum" : 2,
